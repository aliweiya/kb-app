.container {
  
}

page {
  width: 750rpx;
  height: 100%;
}

.kb-loadingbg-wrap {
  width: 100%;
  display: block;
  overflow: hidden;
}

/*无图 无网络 无数据*/

.kb-logo-image {
  width: 190rpx;
  height: 100rpx;
  display: block;
  margin: 400rpx auto 24rpx;
}

.kb-loading-image {
  width: 60rpx;
  height: 20rpx;
  display: block;
  margin: 0 auto;
  padding: 20px 0;
}

.kb-warn-image {
  width: 330rpx;
  height: 330rpx;
  display: block;
  margin: 0 auto ;
  padding-top:250rpx;
}

.bk-warn-black {
  font-size: 40rpx;
  color: #000;
  display: block;
  text-align:center;
  margin: 30rpx auto;
}

.kb-warn-grey {
  font-size: 30rpx;
  display: block;
  margin: 0 auto;
  text-align:center;
  color: #888;
}

/** 新闻公共样式 **/

.kb-bg {
  background-color: #f6f6f6;
  min-height: 100%;
}

.kb-title {
  font-size: 36rpx;
  color: #1a1a1a;
  line-height: 48rpx;
}

.kb-clicked{
  color:#888888;
}
.kb-red-em {
  font-size: 22rpx;
  color: #e94221;
  line-height: 22rpx;
  border: 1rpx solid #e94221;
  display: inline-block;
  margin-right: 16rpx;
  border-radius: 3rpx;
  padding: 2rpx;
  vertical-align: top;
  margin-top:6rpx;
}

.kb-span {
  font-size: 24rpx;
  color: #808080;
  line-height: 24rpx;
}

.kb-card {
  padding: 0 30rpx;
  overflow:hidden;
}
.kb-item-content{
  padding: 30rpx 0;
  border-bottom: 2rpx solid #e4e4e4;
}
.kb-del {
  display: inline-block;
  width: 40rpx;
  height: 24rpx;
  background: url(http://mat1.gtimg.com/www/images/newsapp/wxapp/kuaibao/close.png);
  background-size: 40rpx 24rpx;
  display: none;
}

.kb-image-box {
  width: 226rpx;
  height: 150rpx;
  background: url(http://mat1.gtimg.com/www/images/newsapp/wxapp/kuaibao/holder_bigpic.png) #ececec center no-repeat;
  background-size: 114rpx 60rpx;
}

.kb-img-center {
  width: 226rpx;
  height: 150rpx;
}

.kb-video {
  width: 690rpx;
  height: 390rpx;
}

.loadding-wrap {
  padding-bottom: 40px;
}

/*顶部提示*/

.bk-top-warn {
  background: #fae0db;
  width: 750rpx;
  height: 70rpx;
 overflow: hidden;
}

.kb-new-txt {
  font-size: 28rpx;
  color: #e94220;
  line-height: 36px;
}

/**刷新样式**/

.reflash-wrap {
  text-align: center;
  background: #ebebeb;
  font-size: 28rpx;
  margin-top: -1px;
  padding: 20rpx 0;
}
.reflash-icon {
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}

.reflash-txt {
  font-size: 28rpx;
  color: #888888;
}

/**专题样式**/

.bottom-wrap {
  position: relative;
  margin-top: 20rpx;
}

.kb-fixed-top {
  margin-right: 16rpx;
}

.del-btn {
  position: absolute;
  right: 0;
  top: 0;
}

/**多图样式**/

.middle-img {
  margin: 0 6rpx;
}

.muti-item {
  overflow: hidden;
  height: 150rpx;
  background: url(http://mat1.gtimg.com/www/images/newsapp/wxapp/kuaibao/holder_bigpic.png) #ececec center no-repeat;
  background-size: 114rpx 60rpx;
  
}

.muti-img-wrap {
  margin-top: 20rpx;
  margin-bottom:6rpx;
}

/**标准图文2行**/

.sim2-style {
}

.sim2-content-wrap {
  margin-right: 30rpx;
  overflow: hidden;
}

.sim2-text {
  min-height: 72rpx;
}

/**大图视频**/

.video-img-wrap {
  margin-top: 20rpx;
  margin-bottom: 12rpx;
  text-align: center;
  width: 690rpx;
  height: 390rpx;
  background: url(http://mat1.gtimg.com/www/images/newsapp/wxapp/kuaibao/holder_bigpic.png) #ececec center no-repeat;
  background-size: 114rpx 60rpx;
}

.video-img {
  height: 390rpx;
  width: 690rpx;
}

.video-txt-wrap {
  margin-right: 30rpx;
}

.video-big-ico-wrap {
  left: 50%;
  top: 50%;
  margin-left: -45rpx;
  margin-top: -45rpx;
}

.video-big-icon {
  width: 90rpx;
  height: 90rpx;
}

/**标准图文3行**/

.sim3-txt-wrap {
  margin-right: 30rpx;
}

.sim3-txt-wrap {
  margin-top: 9px;
}

/**小图视频**/

.video-shadow {
  background-image: linear-gradient(-180deg, rgba(0, 0, 0, 0.00) 0%, rgba(0, 0, 0, 0.60) 100%);
  width: 226rpx;
  height: 60rpx;
  bottom: 0;
}

.video-play-wrap {
  right: 10rpx;
  bottom: 10rpx;
  height: 30rpx;
}

.video-paly-icon {
  width: 18rpx;
  height: 22rpx;
  margin-right: 6rpx;
  display: inline-block;
  vertical-align: top;
}

.video-play-time {
  font-size: 24rpx;
  color: #fff;
  display: inline-block;
  vertical-align: top;
  line-height: 24rpx;
}
.kb-loading-top-wrap{
  padding: 10px;
}
.kb-loading-bottom-wrap{
  padding: 20px 0;
}
.kb-loading-top-image{
    width: 50rpx;
    height: 50rpx;
    display: block;
    margin: 0 auto;
}

/*删除*/
.del-hate{
  position: absolute;
  right: 0;
  bottom: -16rpx;
  width: 220rpx;
  height: 60rpx;
  display: none;
}
.bottom-content{
  position: relative;
  overflow: hidden;
  font-size:24rpx;
  line-height:36rpx;
}
.kb-bottom-nomore{
  padding: 20px 0;
  font-size:30rpx;
  color:#c0c0c0;
  text-align:center;
  display: block
}
.kb-chlname{
  word-break: break-all;
  display: inline-block;
  line-height: 24rpx;
  margin-right: 10rpx;
}
.kb-item-comment{
  position: absolute;
  right: 0;
  top: 6rpx;
}


